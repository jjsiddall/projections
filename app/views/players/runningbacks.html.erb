<% model_class = Player %>
<div class="page-header">
  <h1><%= link_to "Running Backs", players_path(format: "csv") %><br></h1>
</div>
<%= link_to "<i class='icon-white icon-backward'></i> Back to Players".html_safe, players_path, :class => 'btn btn-mini btn-primary' %>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:source) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:team) %></th>
      <th><%= model_class.human_attribute_name(:stat_year) %></th>
      <th><%= model_class.human_attribute_name(:rushes) %></th>
      <th><%= model_class.human_attribute_name(:rush_yards) %></th>
      <th><%= model_class.human_attribute_name(:rush_tds) %></th>
      <th><%= model_class.human_attribute_name(:receiving_yards) %></th>
      <th><%= model_class.human_attribute_name(:receiving_tds) %></th>
      <th><%= model_class.human_attribute_name(:fumble_lost) %></th>
      <th><%= model_class.human_attribute_name(:fpoints) %></th>

      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.source %></td>
        <td><%= player.name %></td>
        <td><%= player.team %></td>
        <td><%= player.stat_year %></td>
        <td><%= player.rushes %></td>
        <td><%= player.rush_yards %></td>
        <td><%= player.rush_tds %></td>
        <td><%= player.receiving_yards %></td>
        <td><%= player.receiving_tds %></td>
        <td><%= player.fumble_lost %></td>
        <td><%= player.fpoints %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_player_path(player), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      player_path(player),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_player_path,
            :class => 'btn btn-primary' %>
