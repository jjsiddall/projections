<% 
  model_class = Player 
  source = params[:source].upcase
  year = params[:year]
%>

<div class="page-header">
  <h1><%= link_to "Defenses", defenses_players_path(source: source, year: year, format: "csv") %>: <%= year %> <%= source %></h1>
</div>
<%= link_to "<i class='icon-white icon-backward'></i> Home".html_safe, root_path, :class => 'btn btn-mini btn-primary' %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Team</th>
      <th>TDs</th>
      <th>Interceptions</th>
      <th>Sacks</th>
      <th>Fumble Recoveries</th>
      <th>Points Against</th>
      <th>Yards Against</th>
      <th>Points</th>
    </tr>
  </thead>
  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.team %></td>
        <td><%= player.rush_tds %></td>
        <td><%= player.interceptions %></td>
        <td><%= player.sacks %></td>
        <td><%= player.fumble_recoveries %></td>
        <td><%= player.points_against %></td>
        <td><%= player.yards_against %></td>
        <td><%= player.fpoints %></td>
      </tr>
    <% end %>
  </tbody>
</table>